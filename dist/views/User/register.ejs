<%- include('../particles/header.ejs') %>

<%- include('../particles/navigation.ejs') %>
    <div class="login_box">
        <form action="/register" method="post">
            <div class="label">REGISTER</div>
            <input class="name" name="username" placeholder="name">
            <input class="password" name="password" type="password" placeholder="password">
            <% for (let i=0; i < schools.length; i++) { %>
                <div class="create__radio__items">
                    <input type="radio" class="block float-left left-20 relative " name="check_school"
                        value="<%= schools[i].id %>">
                    <label class="radio__items">
                        <%= schools[i].name %>
                    </label>
                </div>
                <% } %>
            <input class='login-button' type="submit" value="Send">
        </form>
    </div>
<%- include('../particles/footer.ejs') %>