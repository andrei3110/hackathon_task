<%- include('../particles/header.ejs') %>

    <%- include('../particles/navigation.ejs') %>
        <div class="bg-red-100">CREATE</div>
        <div class="">
            <form action="/update/<%= id %>" enctype="multipart/form-data" method="post">
                <input name="first_Name" placeholder="first_Name" required>
                <input name="last_Name" placeholder="last_Name" required>
                <input name="date_of_birth" type="date" placeholder="date_of_birth" required>
               
                <!-- <input type="file" name="file" accept="image/png, image/jpeg"> -->
                <div class="blocks">
                <div class="label">Schools</div>
                <% for (let i=0; i < schools.length; i++) { %>
                    <div class="create__radio__items">
                        <input type="radio" class="block float-left left-20 relative " name="check_school"
                            value="<%= schools[i].id %>">
                        <label class="radio__items">
                            <%= schools[i].name %>
                        </label>
                    </div>
                <% } %>
            </div>
                <div class="blocks">
                <div class="label">Events</div>
                <% for (let i=0; i < events.length; i++) { %>
                    <div class="create__radio__items">
                        <input type="radio" class="block float-left left-20 relative " name="check_events"
                            value="<%= events[i].id %>">
                        <label class="radio__items">
                            <%= events[i].name %>
                        </label>
                    </div>
                <% } %>
            </div>
                <div class="blocks">
                    <div class="label">Top Places</div>
                <% for (let i=0; i < top_places.length; i++) { %>
                    <div class="create__radio__items">
                        <input type="radio" class="block float-left left-20 relative " name="check_top_places"
                            value="<%= top_places[i].id %>">
                        <label class="radio__items">
                            <%= top_places[i].title %>
                        </label>
                    </div>
                <% } %>
                </div>
                
                        <input type="submit" value="send">
            </form>
            
        </div>
        <%- include('../particles/footer.ejs') %>